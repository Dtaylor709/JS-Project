<%- include("../partials/_head") -%>

    <body>
        <div>
            <img class="home_pg_image" src="images/HomePage_img.jpg">
            <h1>Women in Tech</h1>

        </div>
        

        <form id="search-form" action="/" method="GET">
            <input name="name" id="name-query" type="text" />
            <input type="submit" value="Search" />
        </form>

        <div class="wrapper">
        <% people.forEach(person => { %>
            <div class="wrapper_item"><a href="/profile/<%= person.id %>">
                <img class="thumb_img" src=<%= person.photo %>>
                <h3 class="thumb_title"><%= person.name %></h3></a></div>              
        <% }) %>
        </div>
    
