<%- include("../partials/_head") -%>

    <body>
        <section id="about">
            
            <div class="container1">
            <div class="home_pg_image_container">
            <img class="home_pg_image" src="images/Group_photo.jpg" id="aboutimage" alt="about image"></div>
            <div><h2 class="about-heading">
                Women in Technology
            </h2>
            <h1 class="heading-block">
            Search for your inspiration!
            </h1>
            <form id="search-form" action="/" method="GET">
                <div class="input_area _inputArea">
                    <input name="name" id="name-query" type="text" placeholder="Search by name"/>
                    <input class="btn_type9" type="submit" value="Search" />
                </div>
            </form>
            </div>
            </div>
    </section>
    
        <div class="wrapper">
        <% people.forEach(person => { %>
            <div class="wrapper_item"><a href="/profile/<%= person.id %>">
                <img class="thumb_img" src=<%= person.photo %>>
                <h3 class="thumb_title"><%= person.name %></h3></a></div>              
        <% }) %>
        </div>
    
            </body>   


